{{!
    @template block_news_slider_plus/slider

    Display News Slider Plus

    News content json template

    {
    "news": [
        {"headline":"Headline 1", "message":"Content 1"},
        {"headline":"Headline 1", "message":"Content 2"},
        {"headline":"Headline 1", "content":"Content 3"}
    ]
}
}}

<div id="slider-container" class="style5">

    <div class="slider-banner-top" style="height: 100%">
            <h1 style="text-align:center;">{{title}}</h1>
    </div>

    <div class="multiple-items slider-col">
        {{#news}}
            <div class="news_item">

                <figure class="snip1216">
                  <div class="image">
                    <div class="overlay" style="background:{{{colour}}};opacity:0.25;"></div>
                    <img src="{{{attachedimage_url}}}"/>
                  </div>
                  <figcaption>
                    <div class="date"><span class="day" style="background:{{{colour}}};opacity:0.9;">{{{daycreated}}}</span><span class="month" style="background:{{{colour}}};">{{{monthcreated}}}</span></div>
                    <h3>{{{subject}}}</h3>
                    <p>{{{shortmessage}}}
                    </p>
                  </figcaption>
                  <footer style="background:{{{colour}}}">
                      <div class="views"><i class="fa fa-eye"></i>{{{viewcount}}}</div>
                      <div class="comments"><i class="fa fa-comments"></i>{{{commentcount}}}</div>
                    </footer>
                  </figcaption><a href="{{{link}}}"></a>
                </figure>

            </div>
        {{/news}}
    </div>

</div>



